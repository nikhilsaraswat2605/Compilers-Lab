RM = rm -f
OUTPUT_FILE = ass3_20CS30003_20CS10039_output.txt
SRC_FILE = ass3_20CS30003_20CS10039.c
TEST_FILE = ass3_20CS30003_20CS10039_test.c
LEX_FILE = ass3_20CS30003_20CS10039.l
LEX_SRC = lex.yy.c
ANALYZER = a.out
CC = gcc
LEX_COMPILER = flex
FLAG = -lfl
ass3_20CS30003_20CS10039_output.txt: a.out ass3_20CS30003_20CS10039_test.c
	./$(ANALYZER) < $(TEST_FILE) > $(OUTPUT_FILE)

a.out: lex.yy.c
	$(CC) $(LEX_SRC) $(FLAG)

lex.yy.c: ass3_20CS30003_20CS10039.l ass3_20CS30003_20CS10039.c
	$(LEX_COMPILER) $(LEX_FILE) $(SRC_FILE)

clean:
	$(RM) $(ANALYZER) $(LEX_SRC) $(OUTPUT_FILE)